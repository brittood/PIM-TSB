<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="19dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp"
        android:paddingBottom="16dp"
        app:strokeColor="@color/primaryColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/top_view"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:background="@color/primaryColor" />
            <ImageView
                android:id="@+id/car_image"
                android:layout_width="156dp"
                android:layout_height="92dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_card_icon" />

            <TextView
                android:id="@+id/model_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/car_image"
                android:fontFamily="@font/montserrat"
                android:layout_marginBottom="10dp"
                android:text="Nome do modelo"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/model_card"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/car_image"
                android:fontFamily="@font/montserrat"
                android:text="Cor"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/title_placa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_view"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingTop="14dp"
                android:text="PLACA: "
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/car_placa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_view"
                android:fontFamily="@font/montserrat"
                android:layout_toRightOf="@id/title_placa"
                android:paddingTop="14dp"
                android:text="XXX - 0000"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/title_marca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_view"
                android:fontFamily="@font/montserrat"
                android:layout_toRightOf="@id/car_placa"
                android:textStyle="bold"
                android:paddingLeft="6dp"
                android:paddingTop="14dp"
                android:text="MARCA: "
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/car_marca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_view"
                android:fontFamily="@font/montserrat"
                android:layout_toRightOf="@id/title_marca"
                android:paddingTop="14dp"
                android:text="VOLKSWAGEM"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/title_renavam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_placa"
                android:fontFamily="@font/montserrat"
                android:paddingLeft="10dp"
                android:paddingTop="14dp"
                android:text="RENAVAM: "
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/car_renavam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_placa"
                android:fontFamily="@font/montserrat"
                android:layout_toRightOf="@id/title_renavam"
                android:paddingTop="14dp"
                android:text="00000000000"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/title_ano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_marca"
                android:fontFamily="@font/montserrat"
                android:layout_toRightOf="@id/car_renavam"
                android:textStyle="bold"
                android:paddingLeft="6dp"
                android:paddingTop="14dp"
                android:text="ANO: "
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/car_ano"
                android:paddingBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_marca"
                android:fontFamily="@font/montserrat"
                android:layout_toRightOf="@id/title_ano"
                android:paddingTop="14dp"
                android:text="2010"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</RelativeLayout>